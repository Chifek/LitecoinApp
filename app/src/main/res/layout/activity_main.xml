<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/dataTextViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ltc_doge_balance"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1C96D8"
        android:layout_margin="26dp"/>

    <TextView
        android:id="@+id/dataTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dataTextViewTitle"
        android:text="@string/data_will_be_displayed_here"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dataTextView"
        android:layout_centerHorizontal="true"
        android:text="@string/refresh"/>

</RelativeLayout>
